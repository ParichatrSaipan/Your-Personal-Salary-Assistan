{
  "version": 2,
  "builds": [
    {
      "src": "salary/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "salary/dist" }
    },
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/app.py" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/salary/dist/$1" },
    { "src": "/.*", "dest": "/salary/dist/index.html" }
  ]
}
